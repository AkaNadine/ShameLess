<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8072ACAC"
    tools:context=".mainmenu.PregnancyScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000">


            <TextView
                android:id="@+id/titleWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0072ACAC"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/titleWindow"
                app:srcCompat="@drawable/ic_undraw_baby_ja_7_a" />

            <TextView
                android:id="@+id/messageWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/message2Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageWindow"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>