<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8072ACAC"
    tools:context=".mainmenu.PubertyScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titlePuberty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0072ACAC"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/titlePuberty"
                app:srcCompat="@drawable/ic_undraw_reading_re_29f8" />

            <TextView
                android:id="@+id/articlePuberty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:layout_below="@id/imageView"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/titlePuberty2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/articlePuberty"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/articlePuberty2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlePuberty2"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp"  />

            <TextView
                android:id="@+id/titlePuberty3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/articlePuberty2"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/articlePuberty3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlePuberty3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>