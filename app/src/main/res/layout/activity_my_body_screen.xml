<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80FFFFFF"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".mainmenu.MyBodyScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/titleWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="#00E9C46A"
                android:paddingTop="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/titleWindow"
                app:srcCompat="@drawable/female_reproduction" />


            <ImageView
                android:id="@+id/image2View"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/title2Window"
                app:srcCompat="@drawable/male_reproduction" />

            <TextView
                android:id="@+id/messageWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title2Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageWindow"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/message2Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image2View"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
