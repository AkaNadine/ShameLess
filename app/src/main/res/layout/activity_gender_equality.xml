<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mainmenu.GenderEqualityScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleGenderEquality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/gender_equality_picture"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/titleGenderEquality"
                app:srcCompat="@drawable/ic_undraw_lives_matter_38lv" />
            <TextView
                android:id="@+id/articleGenderEquality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_equality_picture"
                android:padding="30dp"
                android:textSize="15sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>