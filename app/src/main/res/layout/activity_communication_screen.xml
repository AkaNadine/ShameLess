<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8072ACAC"
    tools:context=".mainmenu.CommunicationScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0072ACAC"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/titleWindow"
                app:srcCompat="@drawable/ic_undraw_online_discussion_re_nn7e" />


            <TextView
                android:id="@+id/messageWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header1Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageWindow"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message1Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header1Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header2Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message1Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message2Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header2Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header3Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message2Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message3Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header3Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header4Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message3Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message4Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header4Window"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="15sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>